{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row d-flex justify-content-around"  style="margin: 20px">

			{% for article in articles %}
					<div class="card" style="width: 18rem;">
					<div class="card-body">
						<h2 class="card-title">{{ article.titre }}</h2>
						<p class="card-text">{{ article.texte }}</p>
						<a href='{{ path('detail',{"id":article.id}) }}' class="btn btn-primary">Lire l'article</a>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>
{% endblock %}
