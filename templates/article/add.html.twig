{% extends "base.html.twig" %}

{% block title %}Ajouter un article
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h1>Ajout d'un article</h1>
                {{ form_start(articleForm) }}

				{{ form_row(articleForm.titre) }}
				{{ form_row(articleForm.texte) }}

				<button type="submit" class="btn btn-lg btn-primary mt-2 mb-3">Publier</button>
				{{ form_end(articleForm) }}
			</div>
		</div>
	</div>
{% endblock %}